{
  "exclude": ["dist","lib","node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2022",
    "traceResolution": true
  },
  "include": ["./src"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}